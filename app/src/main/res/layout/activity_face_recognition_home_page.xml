<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DIM_GREY"
    tools:context=".activities.FaceRecognitionHomePageActivity">

    <include layout="@layout/apptoolbar"
        android:id="@+id/main_toolbarr"/>

    <RelativeLayout
        android:id="@+id/rly_main"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        >

    <ImageView
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        app:srcCompat="@drawable/download" />

    <Button
        android:layout_below="@id/imageView"
        android:id="@+id/moveToInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textSize="17sp"
        android:padding="@dimen/dp15"
        android:layout_marginTop="@dimen/left20dp"
        android:layout_marginLeft="@dimen/left40dp"
        android:layout_marginRight="@dimen/left40dp"
        android:text="@string/firstPageText"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/left10dp"
        android:layout_alignParentBottom="true"
        >

        <include
            layout="@layout/pco_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </include>


    </RelativeLayout>
</RelativeLayout>